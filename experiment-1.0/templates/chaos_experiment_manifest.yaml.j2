apiVersion: chaos-mesh.org/v1alpha1
kind: NetworkChaos
metadata:
  name: {{ service }}-delay-{{ ver }}
  namespace: chaos-testing
spec:
  action: delay 
  mode: one 
  selector:
    namespaces:
      - {{ namespace }}
    labelSelectors:
      'name': {{ service }}
  delay:
    latency: {{ delay }}
  duration: {{ duration }}
  direction: {{ direction }}
  target:
    mode: all
    selector:
      namespaces:
        - {{ namespace }}
