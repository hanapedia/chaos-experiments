{% if 'db' not in service and service != 'rabbitmq' and service != 'queue-master' %}
apiVersion: networking.istio.io/v1beta1
kind: VirtualService
metadata:
  name: {{ service }}-delay-v{{ ver }}
  namespace: {{ namespace }}
spec:
  hosts:
  - {{ service }}.{{ namespace }}.svc.cluster.local
  http:
  - fault:
      delay:
        percentage:
          value: 100
        fixedDelay: {{ delay }}
    route:
    - destination:
        host: {{ service }}.{{ namespace }}.svc.cluster.local
{% else %}
apiVersion: chaos-mesh.org/v1alpha1
kind: StressChaos
metadata:
  name: {{ service }}-delay-v{{ ver }}
  namespace: chaos-testing
spec:
  mode: one
  selector:
    namespaces:
      - {{ namespace }}
    labelSelectors:
      'name': {{ service }}
  stressors:
    cpu:
      workers: 1
      load: 100
  duration: 60s
{% endif %}
